{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"plugins": [{ "transform": "typescript-transform-paths" }],
		"paths": {
			"@src/*": ["./src/*"],
			"@data/*": ["./data/*"]
		}
	},
	"include": ["src"],
	"baseUrl": ".",

	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
